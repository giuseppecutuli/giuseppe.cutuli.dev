---
import ThemeToggle from './ThemeToggle.astro';

const items = [
    // {
    //     label: 'Works',
    //     url: '/works/',
    // },
    // {
    //     label: 'Posts',
    //     url: '/posts/',
    // },
    {
        label: 'GitHub',
        url: 'https://github.com/giuseppecutuli',
        target: '_blank',
    },
]

---
<nav class="nav-bar">
    <a href="/" class="title-link">Giuseppe Cutuli</a>
    <div class="nav-links">
        {items.map(item => (
            <a href={item.url} target={item.target}>{item.label}</a>
        ))}
        <ThemeToggle />
    </div>
</nav>

<style>
.nav-bar {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.5rem;
    align-items: center;
}

.title-link {
    font-family: 'Rubik', sans-serif;
    font-weight: 500;
    font-size: 1.3rem;
}

.title-link::before {
    display: none;
}

.nav-links {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    align-items: center;
}

.nav-links a {
    font-size: 1.1rem;
    font-weight: 500;
    margin-top: 0.3rem;
}

