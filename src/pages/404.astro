---
import NotFound from '../assets/svg/404.svg';
import Layout from '../layouts/Layout.astro';
---
<Layout hideFooter>
    <div class="container">
        <NotFound />
        <h1>404</h1>
        <p>It seems like you've wandered into the wrong forest!</p>
        <a href="/">Return Home</a>
    </div>
</Layout>

<style>
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    h1 {
        display: none;
    }
</style>
